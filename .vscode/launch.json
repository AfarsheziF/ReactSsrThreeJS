    "version": "0.2.0",
    "configurations": [
        {
            "name": "Npm Dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Webpack",
            "program": "${workspaceFolder}\\public\\DarknessIsCompletelyDefined.server.bundle.js",
            // "preLaunchTask": "build_dev",
            "sourceMaps": true,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Npm Prod",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ]
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:62091",
            "webRoot": "${workspaceFolder}"
        }
    ]
}